{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "lib": ["es6"],
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": false,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {},
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "files": ["./declarations.d.ts"],
  "include": ["src"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "tailwind.config.js"
  ]
}
